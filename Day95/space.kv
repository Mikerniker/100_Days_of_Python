#:kivy 1.0.9

<SpaceGame>:
    player: spaceship

    Label:
        font_size: 20
        center_x: root.width / 4
        top: root.top - 10
        text: "Score: "

    Label:
        font_size: 20
        center_x: root.width * 3 / 4
        top: root.top - 10
        text: "Lives: "
    
    Spaceship:
        id: spaceship
        center_x: root.center_x
        y: 10


<Alien>:

    size: 35, 35
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'alien1.png'

<Spaceship>:
    size: 50, 50
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'ship.png'